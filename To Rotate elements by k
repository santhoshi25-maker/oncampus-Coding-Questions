import java.util.Arrays;

public class Main {
    public static void main(String[] args) {
        int[] array = {1, 2, 3, 4, 5, 6, 7};  // Input array
        int k = 3;  // Number of positions to rotate by
        
     

        // Call the function to rotate the array
        rotate(array, k);

        // Print the rotated array
        System.out.println("Rotated Array: " + Arrays.toString(array));
    }

    // Function to rotate the array by k positions
    public static void rotate(int[] array, int k) {
        int n = array.length;

        // Step 1: Reverse the entire array
        reverse(array, 0, n - 1);
        
        // Step 2: Reverse the first k elements
        reverse(array, 0, k - 1);
        
        // Step 3: Reverse the remaining n-k elements
        reverse(array, k, n - 1);
    }

    // Helper function to reverse a portion of the array from start to end
    public static void reverse(int[] array, int start, int end) {
        while (start < end) {
            // Swap the elements at index start and end
            int temp = array[start];
            array[start] = array[end];
            array[end] = temp;
            
            // Move pointers towards each other
            start++;
            end--;
        }
    }
}
